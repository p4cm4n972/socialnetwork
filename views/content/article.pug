extends ../layout

block content
  .page-header
    h3 Add articles 

  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='name') Title
      .col-sm-8
        input.form-control(type='text', name='title', id='title', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='content') Body
      .col-sm-8
        textarea.form-control(name='content', id='content', rows='7')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          i.fa.fa-envelope
          | post
